{
  "name": "d3-force-simulator",
  "version": "0.1.0",
  "description": "d3 力图模拟器",
  "files": [
    "lib",
    "src",
    "dist"
  ],
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/DelBlank/d3-force-simulator"
  },
  "license": "MIT",
  "author": {
    "name": "delblank",
    "email": "cpyjss@gmail.com"
  },
  "scripts": {
    "lint": "eslint . --fix --format codeframe",
    "lint-staged": "lint-staged",
    "build": "NODE_ENV=production npm run build:rollup",
    "build:rollup": "rm -rf dist && rollup -c",
    "test": "NODE_ENV=development jest --forceExit",
    "precommit": "npm run test && lint-staged",
    "prepublish": "rm -rf dist && npm run build"
  },
  "dependencies": {
    "d3-force": "^1.1.0",
    "lodash.merge": "^4.6.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-es2015-spread": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "eslint": "^4.8.0",
    "eslint-config-prettier": "^2.7.0",
    "eslint-plugin-prettier": "^2.3.1",
    "husky": "^0.13.4",
    "jest-cli": "20.0.0",
    "lint-staged": "^8.1.4",
    "prettier": "^1.8.1",
    "rollup": "^0.63.4",
    "rollup-plugin-babel": "^3.0.7",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-filesize": "^4.0.1",
    "rollup-plugin-json": "^3.0.0",
    "rollup-plugin-node-resolve": "^3.3.0"
  },
  "lint-staged": {
    "**/*.js": [
      "npm run lint",
      "git add"
    ],
    "*.md": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "verbose": true,
    "notify": true,
    "collectCoverage": true,
    "transform": {
      "^.+\\.js?$": "babel-jest"
    },
    "roots": [
      "<rootDir>/__tests__"
    ],
    "modulePaths": [
      "<rootDir>/"
    ],
    "moduleDirectories": [
      "<rootDir>/__mocks__",
      "node_modules"
    ],
    "coverageReporters": [
      "html",
      "text",
      "text-summary"
    ]
  }
}
